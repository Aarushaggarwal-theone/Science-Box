---
import { getCollection } from 'astro:content';
import Layout from "../../layouts/Layout.astro";
import ResponsiveNav from "../../components/ResponsiveNav.astro";
import BlogLength from "../../components/BlogLength.astro";
import { navLinks } from "../../utils/navLinks";

const articles = await getCollection('articles');
---

<Layout>
  <div class="bg-skyede w-full min-h-screen h-full">
    <div class="bg-[url(../repeat.svg)] bg-repeat min-h-screen">
      <ResponsiveNav links={navLinks}/>

      <div class="main mt-12 md:mt-auto py-2 md:py-6">
        <div class="flex justify-center mb-4">
          <h1 class="text-2xl md:text-5xl text-josefin-800">All Articles</h1>
        </div>
        <div class="flex justify-center mb-4">
          <p class="md:text-2xl text-center text-josefin-400 text-slate-600 w-screen">
            interesting information about this world in one place - unexpected,
            fascinating, and just a little mind-blowing.
          </p>
        </div>

        <div class="mt-2 text-center w-full m-auto">
          {articles.map((article) => (
            <div class="m-auto">
              <BlogLength
                title={article.data.title}
                slug={`/${article.slug}`}
                description={article.data.description}
                titleColor={article.data.titleColor || "text-josefin-800"}
                titleImage={article.data.titleImage}
                author={article.data.author}
              />
            </div>
          ))}
        </div>
      </div>
    </div>
    <div class="w-screen h-fit p-2 bg-pinky text-josefin-600 text-center">
      <div class="text-2xl">Â© The Science Box </div>
    </div>
  </div>

  <style>
    .button-shadow:hover {
      box-shadow: 3px 3px 0px 0px;
    }
  </style>
</Layout>
