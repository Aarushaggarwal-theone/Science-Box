let navLinks = [
  { href: '/', text: 'Home' },
  { href: '/blog', text: 'Blog' },

  { href: '/infographics', text: 'Infographics' },
  { href: '/about', text: 'About' },

];

let posts: any[] = [];

---

<Layout>
  <div class="bg-skyede w-full min-h-screen">
    <div class="bg-[url(../assets/repeat.svg)] bg-repeat h-screen">
      <ResponsiveNav links={navLinks}/>

      <div class="main mt-12 md:mt-auto py-2 md:py-6">
        <div class="flex justify-center mb-4">
          <h1 class="text-2xl md:text-5xl text-josefin-800">All Articles</h1>
        </div>
        <div class="flex justify-center mb-4">
          <p
            class="md:text-2xl text-center text-josefin-400 text-slate-600 w-screen"
          >
            interestting information about this world in one place - unexpected,
            fascinating, and just a little mind-blowing.
          </p>
        </div>




        <div class="mt-2 text-center w-full m-auto ">
          {
            posts.map((post) => (
              <div class=" m-auto ">
                <BlogLength
                  title={post.title}
                  slug={"/infographics"}
                  heroImagePath={post.coverPath}
                  description={post.description}
                  titleColor={post.titleColor}
                />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>

  <style>
    .button-shadow:hover {
      box-shadow: 3px 3px 0px 0px;
    }
  </style></Layout
>
