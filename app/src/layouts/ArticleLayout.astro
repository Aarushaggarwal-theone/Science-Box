---
import Layout from './Layout.astro';
import { formatDate } from '../utils/date';
import ResponsiveNav from '../components/ResponsiveNav.astro';
import { navLinks } from '../utils/navLinks';

interface Props {
  title: string;
  description?: string;
  pubDate?: string;
  titleColor?: string;
  titleImage?: string;
  author?: string;
}

const { title, description, pubDate, titleColor = "skyede", titleImage, author } = Astro.props;

---

<Layout>
  <div class={`bg-white w-full min-h-screen`}>
    <div class="bg-[url(../repeat.svg)] bg-repeat min-h-screen">
      <ResponsiveNav links={navLinks}/>

      <div class="main mt-12 md:mt-auto py-2 md:py-6">
        
        <div class="flex justify-center mb-4">
          <h1 class={`text-2xl md:text-5xl text-josefin-800 `}>{title}</h1>
        </div>
        {author && (

          <div class="flex justify-center mb-2">
            <p class="text-lg text-slate-600">By {author}</p>
          </div>

        )}
        
        {pubDate && (
          <div class="flex justify-center mb-4">
            <time class="text-sm text-slate-400">
            {formatDate(pubDate)}

            </time>
          </div>
        )}

{titleImage && (
  <div class="flex justify-center mb-4 w-parent">
    <img src={titleImage} alt={title} class="min-w-[800px] max-w-[1000px]" />
  </div>
)}
        <div class="prose text-justify text-xl/12 max-w-none mx-auto px-4 md:px-8 lg:px-12">
          <slot />
        </div>
      </div>
    </div>
    <div class="w-screen h-fit p-2 bg-pinky text-josefin-600 text-center">
      <div class="text-2xl">Â© The Science Box </div>
    </div>
  </div>
</Layout>

<style>
  /* Custom styles for MDX content */
  .prose {
    color: #1f2937;
    font-family: 'Josefin Sans', sans-serif;
  }




  .prose a {
    color: #2563eb;
    text-decoration: none;
    font-weight: 500;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose code {
    background-color: #f3f4f6;
    padding: 0.2em 0.4em;
    border-radius: 0.25em;
    font-family: 'Fira Code', monospace;
    font-size: 0.875em;
  }

  .prose pre {
    background-color: #1f2937;
    color: #f3f4f6;
    padding: 1.25rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }

  .prose blockquote {
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #4b5563;
    font-style: italic;
  }

  .prose img {
    max-width: 100%;
    height: auto;
    margin: 2rem auto;
    border-radius: 0.5rem;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .prose th, .prose td {
    padding: 0.75rem;
    border: 1px solid #e5e7eb;
  }

  .prose th {
    background-color: #f3f4f6;
    font-weight: 600;
  }

  .heading-anchor {
    margin-left: 0.5rem;
    opacity: 0;
    transition: opacity 0.2s;
    text-decoration: none;
  }

  .prose h1:hover .heading-anchor,
  .prose h2:hover .heading-anchor,
  .prose h3:hover .heading-anchor,
  .prose h4:hover .heading-anchor,
  .prose h5:hover .heading-anchor,
  .prose h6:hover .heading-anchor {
    opacity: 1;
  }
</style> 