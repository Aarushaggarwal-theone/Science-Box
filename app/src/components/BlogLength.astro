---
// Define props for the component
export interface Props {
  title: string;
  slug: string;
  description?: string;
  titleColor: string;
  titleImage?: string;
  author?: string;
}

const { slug, title, titleImage, description, titleColor, author } = Astro.props;
---

<div class="bg-white border-3 flex text-center mx-12 mt-12">
  {titleImage && (
    <h2 class="w-[400px]">
      <img
        src={titleImage}
        alt={title}
        class="outline-2 hidden lg:inline lg:visible text-center m-auto h-full w-full"
      />
    </h2>
  )}
  <div class="">
    <div class="max-w-[800px]">
      <div
        class={`text-2xl md:text-3xl text-left text-josefin-800 p-6 bgstff`}
        style={` `}
      >
        {title}
      </div>
      {author && (
        <div class="px-6 text-left text-slate-600">
          <p class="text-lg">By {author}</p>
        </div>
      )}
      <div class="px-6 w-parent">
        {description && (
          <p
            class="text-lg/12 w-parent text-left text-josefin-400 text-slate-600 m-auto"
          >
            {description}
          </p>
        )}
        <div class="text-left group">
          <a href={slug} class="text-lg duration-300 text-josefin-600">
            <img
              src="butt.svg"
              class="p-4 hover:rotate-90 duration-200 hover:scale-105"
            /></a
          >
        </div>
      </div>
    </div>
  </div>
</div>
