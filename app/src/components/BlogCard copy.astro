---
// Define props for the component
export interface Props {
    title: string;
    heroImagePath: string;
    description: string;
    titleColor: string;
}

const { title, heroImagePath, description, titleColor } = Astro.props;
---
<div class="bg-white border-3 md:m-6">
    <h2 class={`text-2xl md:text-3xl text-josefin-800 p-6 outline-3`} style={`background: ${titleColor}`}>
        {title}
    </h2>
    <img src={heroImagePath} alt="" class="hidden md:inline lg:visible mt-4 text-center m-auto h-[300px] p-4">
    <div class="p-6">
        <p class="text-lg text-josefin-400 text-slate-600">
            {description}
        </p>
    </div>
    <a href="/infographics" class="text-lg m-auto flex cols-2">
        <div class="w-5/6"></div>
        <img src="butt.svg" class="p-4 hover:rotate-90 duration-200 hover:scale-105">
    </a>
</div>