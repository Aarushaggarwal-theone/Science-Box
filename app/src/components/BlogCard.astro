---
// Define props for the component
export interface Props {
  title: string;
  heroImagePath: string;
  description: string;
  titleColor: string;
}

const { title, heroImagePath, description, titleColor } = Astro.props;
---

<div class="bg-white border-3 md:m-6">
  <img
    src={heroImagePath}
    alt=""
    class="hidden md:inline lg:visible text-center w-full m-auto outline-3"
  />

  <div class="s">
    <div class={`p-2`}>
      <h2 class={`text-2xl md:text-2xl text-josefin-800 font-extrabold py-6 `}>
        {title}
      </h2>
      <div class="px-4 text-justify">
        <p class="text-lg/8 tracking-wide text-josefin-400 text-black">
          {description}
        </p>
      </div>
    </div>
    <a href="/infographics" class="text-lg m-auto flex cols-2">
      <div class="w-5/6"></div>
      <img
        src="butt.svg"
        class="p-4 hover:rotate-90 duration-200 hover:scale-105"
      />
    </a>
  </div>
</div>
